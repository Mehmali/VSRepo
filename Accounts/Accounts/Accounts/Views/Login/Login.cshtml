<div class="limiter">
    <div class="container-login100" style="background-image: url(http://localhost:8866/images/bg-01.jpg);">
        <div class="wrap-login100">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { name = "loginform", id = "loginform" }))
            {
                <span class="login100-form-logo">
                   PLA
                </span>

                <span class="login100-form-title p-b-34 p-t-27">
                    Log in
                </span>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    @Html.TextBoxFor(u => u.UserName, new { placeholder = "Username", @class = "input100" })
                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    @Html.PasswordFor(u => u.Password, new { placeholder = "Password", @class = "input100" })
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>
                <div>
                    @Html.ValidationSummary(true, "Login failed. Check your login details.")
                </div>
                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Login
                    </button>

                   
                </div>
            }
        </div>
    </div>
</div>


